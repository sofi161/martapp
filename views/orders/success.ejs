<%- include('../partials/header') %>

<style>
  body {
    font-family: Arial, sans-serif;
    background: #f5f7fa;
    margin: 0;
    padding: 0;
  }

  .success-container {
    max-width: 550px;
    margin: 60px auto;
    background: #ffffff;
    padding: 40px;
    border-radius: 14px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
  }

  .success-icon {
    width: 50px;
    height: 50px;
    background: #28a745;
    color: #fff;
    margin: 0 auto 20px auto;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
  }

  h2 {
    font-size: 30px;
    margin-bottom: 10px;
    color: #222;
  }

  p {
    font-size: 18px;
    color: #555;
    margin-bottom: 18px;
  }

  .order-id {
    font-weight: bold;
    color: #1a73e8;
  }

  .view-orders-btn {
    display: inline-block;
    padding: 12px 20px;
    font-size: 17px;
    border-radius: 6px;
    background: #1a73e8;
    color: white;
    text-decoration: none;
    transition: background 0.25s;
  }

  .view-orders-btn:hover {
    background: #155bc0;
  }
</style>

<div class="success-container">
  <div class="success-icon">✓</div>

  <h2>Order Placed Successfully!</h2>

  <p>Thank you for your purchase!</p>
  <p>Your order ID is: <span class="order-id"><%= order._id %></span></p>
  <p>Total Amount: <strong>₹<%= order.totalAmount %></strong></p>

  <a href="/orders" class="view-orders-btn">View My Orders</a>
</div>

<%- include('../partials/footer') %>
